mixin cquestion(statement, name, message)
  div(id=`${name}`)
    h4 #{statement}
    span.boolean-radio
      input(type="radio", name=`${name}`, value="1", id=`${name}-yes`)
      label(for=`${name}-yes`) Yes
    span.boolean-radio
      input(type="radio", name=`${name}`, value="0", id=`${name}-no`)
      label(for=`${name}-no`) No
    p.consent-warning #{message}

